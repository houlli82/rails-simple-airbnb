<h1><%= @flat.name  %></h1>
<p><%= @flat.address %></p>
<p><%= @flat.description %></p>
<p><%= @flat.price_per_night %></p>
<p><%= @flat.number_of_guests %></p>

<%= link_to 'Back', flats_path, class: "btn btn-primary" %>
<%= link_to 'Edit', edit_flat_path(@flat), class: "btn btn-success" %>
<%= link_to "Delete", flat_path(@flat), method: 'delete', data: { confirm: "Delete task: Are you sure?" }, class: "btn btn-danger" %>
